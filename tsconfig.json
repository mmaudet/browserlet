{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "paths": {
      "@browserlet/core": ["./packages/core/src"],
      "@browserlet/core/*": ["./packages/core/src/*"]
    }
  },
  "include": [
    "entrypoints/**/*",
    "utils/**/*",
    "packages/core/src/**/*"
  ],
  "references": [
    { "path": "./packages/core" }
  ]
}
